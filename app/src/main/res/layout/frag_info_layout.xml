<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <EditText
            android:id="@+id/add_alcohol_rate"
            android:layout_width="268dp"
            android:layout_height="80dp"
            android:layout_marginStart="64dp"
            android:ems="10"
            android:hint="Alcohol Rate"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_brew_address" />

        <EditText
            android:id="@+id/add_brew_name"
            android:layout_width="268dp"
            android:layout_height="80dp"
            android:layout_marginStart="64dp"
            android:ems="10"
            android:hint="Brewery Name"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_beer_name" />

        <EditText
            android:id="@+id/add_beer_name"
            android:layout_width="268dp"
            android:layout_height="80dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="Beer Name"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/add_brew_address"
            android:layout_width="268dp"
            android:layout_height="73dp"
            android:layout_marginStart="64dp"
            android:ems="10"
            android:hint="Brewery Adress"
            android:inputType="textPostalAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_brew_name" />

        <Button
            android:id="@+id/add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="140dp"
            android:text="ADD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_alcohol_rate" />
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>